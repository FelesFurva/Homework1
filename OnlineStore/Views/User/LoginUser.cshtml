@model UserLoginModel

<h4>Please Sign In</h4>

@Html.ValidationSummary()

<div class="row">
    <div class="col-md-4">
        <form asp-controller="User" asp-action="LoginUser" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <di v class="form-group">
                <label asp-for="Email" class="control-label">E-mail:</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </di>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Password:</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <br>
                <input type="submit" value="LoginUser" class="btn btn-dark btn-sm" />
            </div>
        </form>
    </div>
</div>

<div>
    <br>
    <button class="btn btn-dark btn-sm"><a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Back</a></button>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}