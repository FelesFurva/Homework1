@using OnlineStore.Models
@model IEnumerable<ProductsModel>

<table class="table">
    <tr class="firstRow">
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
        <th>More Info</th>
    </tr>

    @foreach(var product in Model)
    {
        <tr>
            <td>@product.Name</td>
            <td>@product.Description</td>
            <td>@product.Price</td>
            <td><a asp-area="" asp-contoller="Products" asp-controller="Products" asp-action="FindById" asp-route-specific="@product.ProductId">More info</a></td>
        </tr>
    }
    <tr>
        <td><a class="btn btn-dark btn-sm" asp-area="" asp-controller="Products" asp-action="Create">Add</a></td>
    </tr>
        <tr>
        <td><a class="btn btn-dark btn-sm" asp-area="" asp-controller="Categories" asp-action="Categories">Back</a></td>
    </tr>
</table>