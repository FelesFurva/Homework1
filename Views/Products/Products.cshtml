@using Homework1.Models
@model List<ProductsModel>

<table class="table">
    <tr class="firstRow">
        <th>ID</th>
        <th>Name</th>
        <th>View</th>
        <th>More Info</th>
    </tr>

    @foreach(var products in Model@*.OrderByDescending(product => product.Price)*@)
    {
        <tr>
            <td>@products.Name</td>
            <td>@products.Description</td>
            <td>@products.Price</td>
            <td><a asp-area="" asp-contoller="Products" asp-controller="Products" asp-action="FindById" asp-route-specific="@products.Id">More info</a></td>
        </tr>
    }
    <tr>
        <td><button class="btn btn-dark btn-sm"><a class="nav-link text-white" asp-area="" asp-controller="Products" asp-action="Create">Add</a></button></td>
    </tr>
        <tr>
        <td><button class="btn btn-dark btn-sm"><a class="nav-link text-white" asp-area="" asp-controller="Categories" asp-action="Categories">Back</a></button></td>
    </tr>
</table>